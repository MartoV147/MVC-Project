@model SharedTravel.Models.Travel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Travel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityFrom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressFrom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FreeSeatsCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FreeSeatsCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<h2>Accepted Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Username
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["acceptedUsers"] as List<User>)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Username
                </td>
                <td>
                    <a asp-action="DeleteUT" asp-route-id="@item.UserId" asp-route-secondid="@Model.TravelId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>Pending Invites</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Username
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["pendingUsers"] as List<User>)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Username
                </td>
                <td>
                    <a asp-action="Accept" asp-route-id="@item.UserId" asp-route-secondid="@Model.TravelId">Accept</a> |
                    
                    <a asp-action="Reject" asp-route-id="@item.UserId" asp-route-secondid="@Model.TravelId">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TravelId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
